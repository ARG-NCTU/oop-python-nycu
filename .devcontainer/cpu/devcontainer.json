{
    "name": "Custom Python Development Container",
    "build": {
      "dockerfile": "Docker/cpu/Dockerfile",
      "context": ".."
    },
    "settings": {
      "editor.fontSize": 14,
      "python.pythonPath": "/usr/bin/python3",
      "terminal.integrated.shell.linux": "/bin/bash",
      "files.eol": "\n",
      "files.trimTrailingWhitespace": true
    },
    "postCreateCommand": [
      "pip3 install --upgrade pip setuptools",
      "echo 'Setup complete!'"
    ],
    "extensions": [
      "ms-python.python",
      "ms-toolsai.jupyter",
      "ms-vscode.cpptools",
      "redhat.vscode-yaml",
      "esbenp.prettier-vscode",
      "visualstudioexptteam.vscodeintellicode"
    ],
    "containerEnv": {
      "DEBIAN_FRONTEND": "noninteractive",
      "LANG": "C.UTF-8",
      "LC_ALL": "C.UTF-8",
      "DEVCONTAINER_TYPE": "cpu"
    },
    "forwardPorts": [22],
    "remoteUser": "arg",
    "mounts": [
      "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
      "source=/etc/localtime,target=/etc/localtime,type=bind",
      "source=/dev,target=/dev,type=bind",
      "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "runArgs": [
      "--user", "root:root",
      "--network", "host",
      "--privileged",
      "--security-opt", "seccomp=unconfined",
      "-e", "DISPLAY=${localEnv:DISPLAY}",
      "-e", "QT_X11_NO_MITSHM=1",
      "-e", "XAUTHORITY=/tmp/.docker.xauth",
      "-v", "/tmp/.docker.xauth:/tmp/.docker.xauth",
      "-v", "/home/arg/oop-python-nycu:/home/arg/oop-python-nycu",
      "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
      "-v", "/etc/localtime:/etc/localtime:ro",
      "-v", "/dev:/dev",
      "-v", "/var/run/docker.sock:/var/run/docker.sock",
      "-w", "/home/arg/oop-python-nycu"
    ],
    "postStartCommand": "echo 'Starting $DEVCONTAINER_TYPE DevContainer...'",
    "remoteUser": "arg"
  }
  